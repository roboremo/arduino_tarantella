void tone(uint16_t frq, uint16_t ms) {

  delay(5); // small pause

  if(frq==0) {
    
    delay(ms);
    
  } else {

    uint16_t period = 1000000/frq;
  
    uint16_t delay1 = period/2;
    uint16_t delay2 = period-delay1;
  
    uint16_t n = (1000L*ms)/period;
  
    for(uint16_t i=0; i<n; i++) {
      digitalWrite(sounder, HIGH);
      delayMicroseconds(delay1);
      digitalWrite(sounder, LOW);
      delayMicroseconds(delay2);
    }
    
  }
}


void setup() {
  pinMode(sounder, OUTPUT);
  digitalWrite(sounder, LOW);
}


uint8_t i, j;

void loop() {

   // find melody length, store in j:
   for(j=0; ll1[j]!=0; j++) {;}

   // play melody:
   for(i=0; i<j; i++)
      tone( ((uint16_t)ff1[i])*10, ((uint16_t)ll1[i])*10 );

   // 2s pause before repeating melody
   delay(2000);
        
}
